{
  "name": "chrome-utils-plugin",
  "version": "1.0.0",
  "description": "chrome 自定义工具插件",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --config webpack.config.js --mode development --hot --open",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --config webpack.config.js --mode production",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.{ts,tsx}' --max-warnings=0",
    "prepare": "husky install",
    "start": "npm run dev"
  },
