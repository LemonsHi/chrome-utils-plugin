{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": { "~/*": ["*"] },
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["chrome", "node"]
  },
  "include": ["src", "src/types/**/*.d.ts"]
}
